# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/smarthome
MONGO_DB_NAME=smarthome

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MQTT Broker Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Azure Functions
AZURE_FUNCTION_KEY=your_azure_function_key_here
AZURE_FUNCTION_URL=https://your-function-app.azurewebsites.net

# OAuth2 Configuration
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=http://localhost:5000/auth/callback

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=True

# WebSocket Configuration
WEBSOCKET_PORT=8765

# Alert System
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
ALERT_EMAIL_TO=admin@smarthome.com

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
PASSWORD_SALT=your_password_salt_here
