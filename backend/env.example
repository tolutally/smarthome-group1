# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5001

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/smarthome_db
MONGO_DB_NAME=smarthome_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MQTT Broker Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Azure Functions (for alerts)
AZURE_FUNCTION_KEY=your-azure-function-key
AZURE_FUNCTION_URL=https://your-function-app.azurewebsites.net

# OAuth2 Configuration (Microsoft)
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_TENANT_ID=your-tenant-id

# Application Settings
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5001

# Alert Settings
ALERT_COOLDOWN_SECONDS=300
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Sensor Thresholds (optional overrides)
TEMP_MIN_THRESHOLD=18.0
TEMP_MAX_THRESHOLD=30.0
HUMIDITY_MIN_THRESHOLD=30.0
HUMIDITY_MAX_THRESHOLD=70.0
CO_MIN_THRESHOLD=0.0
CO_MAX_THRESHOLD=50.0 